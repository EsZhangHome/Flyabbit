<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/item_rootview"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/clr_00000000"
              android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_tech_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:transitionName="shareView"
        app:cardBackgroundColor="@color/clr_ffffff"
        app:cardCornerRadius="3dp"
        app:cardElevation="2dp"
        app:contentPadding="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_tech_icon"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:layout_marginEnd="3dp"
                    android:layout_marginStart="3dp"
                    android:src="@mipmap/ic_android"/>

                <TextView
                    android:id="@+id/tv_tech_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/clr_2C2C2C"
                    android:textSize="14sp"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_tech_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="8dp"
                    android:drawableLeft="@mipmap/ic_author"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/clr_9ba4a3"/>

                <TextView
                    android:id="@+id/tv_tech_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="3dp"
                    android:drawableLeft="@mipmap/ic_time"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/clr_9ba4a3"/>
            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>